<section id="todos">

  <header>
    <h2>Editing "<%= @name_of_list %>"</h2>
    <ul>
      <li>
        <form action='/lists/<%= @index %>/destroy' method='post'>
          <button type='submit' class='delete'>Delete List</button>
        </form>
    </ul>
  </header>
</section>

<form action='/lists/<%= @index %>' method='post'>
  <dl>
    <dt>
    <label for='list_name'>Enter the new name for the list:</label>
    </dt>
    <dd>
    <input name='list_name' placeholder='List Name' type ='text' value='<%= params[:list_name] || @name_of_list %>'>
    </dd>
  </dl>
  <fieldset class='actions'>
    <input type='submit' value='Save'>
    <a href='/lists/<%= @index %>'>Cancel</a>
  </fieldset>
</form>
